{
    "version": "0.2.0",
    "configurations": [
        {
            "preLaunchTask": "${defaultBuildTask}",
            "type": "probe-rs-debug",
            "request": "launch",
            "name": "probe-rs-debugger",
            // "server": "127.0.0.1:50001", // For connecting to an existing probe-rs-debugger process
            "chip": "STM32F407VET6",
            "cwd": "${workspaceFolder}",
            "coreConfigs": [
                {
                    "coreIndex": 0,
                    "svdFile": "stm32f407.svd.patched",
                    "rttEnabled": true,
                    "rttChannelFormats": [
                        {
                            "dataFormat": "String",
                            "channelNumber": 0,
                            "showTimestamps": true
                        }
                    ]
                }
            ],
            "programBinary": "${workspaceFolder}/target/thumbv7em-none-eabihf/debug/blinky",
            "runtimeExecutable": "probe-rs",
            "runtimeArgs": ["dap-server"],
            "flashingConfig": {
                "flashingEnabled": true,
                "haltAfterReset": false,
                "formatOptions": {
                    "format": "elf" // Valid values are: 'bin', 'hex', 'elf'(default), 'idf'
                }
            },
            "connectUnderReset": false,
            "consoleLogLevel": "Console", // Options: Info, Debug
            // "speed": 24000, // Uncomment and modify if needed
            // "probe": "VID:PID:<Serial>", // Uncomment and modify if needed
        },
        {
            "name": "Cortex Debug (OpenOCD)",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "openocd",
            "cwd": "${workspaceFolder}",
            "executable": "./target/thumbv7em-none-eabihf/debug/blinky",
            "programBinary": "${workspaceFolder}/target/thumbv7em-none-eabihf/debug/blinky",
            "device": "STM32F407VET6",
            "configFiles": [
                "interface/stlink.cfg",
                "target/stm32f4x.cfg"
            ],
            "svdFile": "${workspaceFolder}/stm32f407.svd",
            "runToMain": true,
            "preLaunchTask": "cargo build",
            "postRestartCommands": [
                "monitor reset halt",
                "monitor reset init"
            ],
            "openOCDLaunchCommands": [
                "init",
                "reset init"
            ],
            "openOCDPreLaunchCommands": [
                "gdb_port 50000",
                "tcl_port 50001",
                "telnet_port 50002"
            ]
        }
    ]
}